<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Diplom.Pages.SignUpPage"
             Title="Регистрация">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Frame Margin="10,0,10,20" CornerRadius="15" BackgroundColor="{AppThemeBinding Dark=#0A1F32, Light=#BDBDBD}" VerticalOptions="CenterAndExpand">
                    <StackLayout>
                        <Entry Placeholder="Логин" PlaceholderColor="LightGray" x:Name="LoginTxt"/>
                        <Entry Placeholder="Пароль" PlaceholderColor="LightGray" IsPassword="True" x:Name="PassTxt"/>
                        <Entry Placeholder="Повторите пароль" PlaceholderColor="LightGray" IsPassword="True" x:Name="ConfPassTxt"/>
                        <Button Text="Зарегистрироваться" CornerRadius="15" BackgroundColor="#153b5d" TextColor="White" Clicked="SignUpButton_Clicked"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>