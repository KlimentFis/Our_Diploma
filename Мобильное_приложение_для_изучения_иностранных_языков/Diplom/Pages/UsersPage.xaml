<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Diplom.Pages.UsersPage"
             Title="Список пользователей">
    <ContentPage.Content>
        <ListView x:Name="listView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="Username: " FontAttributes="Bold" />
                            <Label Text="{Binding Username}" />

                            <Label Text="First Name: " FontAttributes="Bold" />
                            <Label Text="{Binding First_name}" />

                            <Label Text="Last Name: " FontAttributes="Bold" />
                            <Label Text="{Binding Last_name}" />

                            <Label Text="Email: " FontAttributes="Bold" />
                            <Label Text="{Binding Email}" />

                            <!-- Добавьте другие свойства пользователя, которые хотите отобразить -->
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>
